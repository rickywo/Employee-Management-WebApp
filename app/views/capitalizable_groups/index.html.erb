<p id="notice"><%= notice %></p>

<h1>Capitalizable Groups</h1>

<table>
  <thead>
    <tr>
      <th>Capitalizable rate</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @capitalizable_groups.each do |capitalizable_group| %>
      <tr>
        <td><%= capitalizable_group.capitalizable_rate %></td>
        <td><%= capitalizable_group.description %></td>
        <td><%= link_to 'Show', capitalizable_group %></td>
        <td><%= link_to 'Edit', edit_capitalizable_group_path(capitalizable_group) %></td>
        <td><%= link_to 'Destroy', capitalizable_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

