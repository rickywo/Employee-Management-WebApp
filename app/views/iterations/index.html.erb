<h1>Iterations</h1>

<table id="jqGrid"></table>
<div id="jqGridPager"></div>

<script type="text/javascript">

  $(document).ready(function () {
    $("#jqGrid").jqGrid({
      url: "/iterations",
      datatype: "json",
      mtype: 'GET',
