<p id="notice"><%= notice %></p>

<h1>Attendance Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Attendance rate</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @attendance_types.each do |attendance_type| %>
      <tr>
        <td><%= attendance_type.name %></td>
        <td><%= attendance_type.attendance_rate %></td>
        <td><%= attendance_type.description %></td>
        <td><%= link_to 'Show', attendance_type %></td>
        <td><%= link_to 'Edit', edit_attendance_type_path(attendance_type) %></td>
        <td><%= link_to 'Destroy', attendance_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

